{
    "eslint.useFlatConfig": true,
    "eslint.format.enable": true,

    "editor.formatOnSave": true,
    "eslint.codeActionsOnSave.rules": null,
    "editor.codeActionsOnSave": {
      "source.fixAll": "always",
      "source.fixAll.eslint": "explicit"
    },
    "eslint.validate": [
      "javascript",
      "vue"
    ]
}